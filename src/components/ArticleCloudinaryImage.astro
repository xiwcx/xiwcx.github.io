---
import { getCloudinaryResource } from "../utils/cloudinary";
import CloudinaryImage from "./CloudinaryImage.astro";
import { defaultImageSizes } from "../utils/cloudinary";

export interface Props {
  cloudinaryId: string;
}

const { cloudinaryId } = Astro.props;

const cloudinaryResource = await getCloudinaryResource(cloudinaryId);
---

<CloudinaryImage
  cloudinaryResource={cloudinaryResource}
  sizes={defaultImageSizes}
  imageProps={{ loading: "lazy" }}
/>
